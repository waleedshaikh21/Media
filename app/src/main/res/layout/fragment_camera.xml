<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    tools:context="Fragments.CameraFragment">

    <ImageView
        android:id="@+id/InstagramName"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/instaname" />

    <TextView
        android:id="@+id/bar1"
        android:layout_width="150dp"
        android:layout_height="4dp"
        android:layout_below="@id/InstagramName"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorDarkGrey" />

    <TextView
        android:id="@+id/bar2"
        android:layout_width="150dp"
        android:layout_height="4dp"
        android:layout_below="@id/InstagramName"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="@color/colorDarkGrey" />

    <TextView
        android:id="@+id/OR"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@id/InstagramName"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:text="Uploading"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/Caption"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/bar1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/textviewlogin"
        android:hint="Enter your Image Caption"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorGrey"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageToUploadIV"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/Caption"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/bg_iv"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/textgallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Caption"
        android:layout_centerInParent="true"
        android:layout_marginTop="100dp"
        android:text="Select An Image To Upload"
        android:textColor="@color/colorDarkGrey"
        android:textSize="20sp"
        android:textStyle="italic"
        android:visibility="visible" />

    <Button
        android:id="@+id/Upload"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/imageToUploadIV"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/loginbutton"
        android:drawableStart="@drawable/ic_camera"
        android:paddingStart="13dp" />

    <Button
        android:id="@+id/UploadImg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/imageToUploadIV"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_toRightOf="@id/Upload"
        android:background="@drawable/loginbutton"
        android:paddingStart="10dp"
        android:paddingEnd="20dp"
        android:text="Upload"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="15sp" />

    <ProgressBar
        android:id="@+id/ProgressBar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="600dp"
        android:background="@drawable/progress_bar"
        android:outlineAmbientShadowColor="@color/colorPrimaryDark"
        android:outlineSpotShadowColor="@color/colorPrimaryDark"
        android:visibility="invisible" />
</RelativeLayout>